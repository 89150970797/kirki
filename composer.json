{
  "name": "aristath/kirki",
  "type": "library",
  "keywords": ["WordPress", "Customizer"],
  "description": "Extending the WordPress customizer",
  "homepage": "https://aristath.github.io/kirki",
  "license": "MIT",
  "config": {
    "vendor-dir": "packages"
  },
  "authors": [
    {
      "name": "aristath",
      "email": "aristath@gmail.com",
      "homepage": "https://aristath.github.io",
      "role":"Developer"
    }
  ],
  "include-path": [".", "core"],
  "require": {
    "php": ">=5.6",
    "kirki-framework/core": "dev-master",
    "kirki-framework/module-css": "dev-master",
    "kirki-framework/module-css-vars": "dev-master",
    "kirki-framework/control-base": "dev-master"
  },
  "require-dev": {
    "php-coveralls/php-coveralls": "^2.0",
    "phpunit/phpunit": "*",
    "composer/installers": "*",
    "dealerdirect/phpcodesniffer-composer-installer": "*",
    "phpcompatibility/phpcompatibility-wp": "*",
    "wp-coding-standards/wpcs": "*",
    "codacy/coverage": "dev-master"
  }
}
